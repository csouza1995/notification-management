{
    "name": "csouza/notification-management",
    "description": "Laravel package for managing user notification preferences across multiple channels",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "laravel",
        "notifications",
        "channels",
        "preferences",
        "user-preferences"
    ],
    "authors": [
        {
            "name": "Carlos Souza",
            "email": "carlossouza.work@gmail.com",
            "homepage": "https://github.com/csouza1995",
            "role": "Developer"
        }
    ],
    "homepage": "https://github.com/csouza1995/notification-management",
    "support": {
        "issues": "https://github.com/csouza1995/notification-management/issues",
        "source": "https://github.com/csouza1995/notification-management"
    },
    "require": {
        "php": "^8.1",
        "illuminate/support": "^10.0|^11.0",
        "illuminate/database": "^10.0|^11.0",
        "illuminate/notifications": "^10.0|^11.0"
    },
    "require-dev": {
        "laravel/pint": "^1.13",
        "pestphp/pest": "^2.34",
        "pestphp/pest-plugin-laravel": "^2.3",
        "orchestra/testbench": "^8.0|^9.0",
        "nunomaduro/larastan": "^2.9",
        "phpstan/phpstan": "^1.10"
    },
    "autoload": {
        "psr-4": {
            "Csouza\\NotificationManagement\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Csouza\\NotificationManagement\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint",
        "analyse": "vendor/bin/phpstan analyse"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Csouza\\NotificationManagement\\NotificationManagementServiceProvider"
            ]
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}